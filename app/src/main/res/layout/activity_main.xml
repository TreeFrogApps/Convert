<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context=".MainActivity">

    <TableRow
        android:gravity="center"
        android:paddingBottom="24dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/conversion_type"
            android:textColor="@color/dark_blue"
            android:textSize="18sp" />

    </TableRow>

    <TableRow>

        <Spinner
            android:id="@+id/conversionTypesSpinner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="6dp"/>

    </TableRow>

    <TableRow>

        <EditText
            android:id="@+id/leftInputEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/equalsTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/equals_text_view"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/rightInputEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textSize="24sp" />

    </TableRow>

    <TableRow android:paddingTop="18dp">

        <Spinner
            android:id="@+id/conversionFromSpinner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="24dp"
            android:layout_weight="1"
            android:padding="6dp"/>

        <Spinner
            android:id="@+id/conversionToSpinner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dp"
            android:layout_weight="1"
            android:padding="6dp"/>

    </TableRow>


</TableLayout>
